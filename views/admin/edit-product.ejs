<div class="row">
   <div class="col-10 col-sm-8 col-md-6 col-lg-4 m-auto mt-5">
      <div class="card">
         <div class="card-body">
            <form action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
               <!-- Id -->
               <% if (editing) { %>
                  <input type="hidden" name="id" id="id" value="<%= product.id %>">
               <% } %>
               <!-- Title -->
               <div class="mb-3">
                  <label class="form-label" for="title">Title</label>
                  <input type="text" class="form-control" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
               </div>
               <!-- Image URL -->
               <div class="mb-3">
                  <label class="form-label" for="imageUrl">Image URL</label>
                  <input type="text" class="form-control" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= product.imageUrl %><% } %>">
               </div>
               <!-- Price -->
               <div class="mb-3">
                  <label class="form-label" for="price">Price</label>
                  <div class="input-group">
                     <span class="input-group-text">&euro;</span>
                     <input type="number" step="0.01" min="0.01" class="form-control" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>">  
                  </div>
               </div>
               <!-- Description -->
               <div class="mb-3">
                  <label class="form-label" for="description">Description</label>
                  <textarea class="form-control" name="description" id="description" rows="5"><% if (editing) { %><%= product.description %><% } %></textarea>
               </div>
               <!-- Submit -->
               <div class="d-flex justify-content-center">
                  <button class="btn btn-outline-teal btn-pill" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>