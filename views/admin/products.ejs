<% if(products.length> 0) { %>
   <div class="row row-cards row-deck g-4 mt-5">
      <% for(const product of products) { %>
         <div class="col-6 col-md-4 col-lg-3">

            <div class="product-card card text-center border rounded-4 overflow-hidden">
               <!-- CONTINUARE DA QUI -->
               <img class="card-img-top img-fluid bg-image hover-zoom"
                  src="<%= product.imageUrl %>" alt="<%= product.title %>">
               <div class="card-header justify-content-center">
                  <h5 class="card-title text-truncate">
                     <%= product.title %>
                  </h5>
               </div>
               <div class="card-body">
                  <p class="card-description card-text overflow-hidden"><%= product.description %></p>
               </div>
               <div class="card-footer card-footer-transparent">
                  <p class="card-text fs-3"><%= product.price %>&euro;</p>
               </div>
               <div class="card-footer d-flex justify-content-center g-2">
                  <!-- TODO: aggiungere rotta dinamica -->
                  <a href="/admin/edit-product" class="btn btn-icon btn-outline-yellow btn-pill p-2 me-3" title="Edit">
                     <i class="ti ti-pencil"></i>
                  </a>
                  <!-- TODO: aggiungere rotta dinamica -->
                  <form action="/admin/delete-product" method="POST">
                     <button class="btn btn-icon btn-outline-danger btn-pill p-2" type="submit" title="Delete">
                        <i class="ti ti-trash"></i>
                     </button>
                  </form>
               </div>
            </div>
         </div>
         <% } %>
   </div>
<% } else { %>
   <div class="mt-5">
      <p class="text-danger">No Products found!</p>
   </div>
<% } %>