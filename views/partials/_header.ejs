<header class="navbar navbar-expand-md navbar-light d-print-none">
   <div class="container-xl">

      <!-- Mobile toggler -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu"
         aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Logo -->
      <h1 class="navbar-brand navbar-brand-autodark d-none-navbar-horizontal pe-0 pe-md-3">
         <a href=".">
            <img src="https://preview.tabler.io/static/logo.svg" width="110" height="32" alt="Tabler"
               class="navbar-brand-image">
         </a>
      </h1>

      <!-- Navlinks -->
      <div class="collapse navbar-collapse" id="navbar-menu">
         <div class="d-flex flex-column flex-md-row flex-fill align-items-stretch align-items-md-center">
            <ul class="navbar-nav">

               <li class="nav-item <%- url === '/' ? 'active' : '' %>">
                  <a class="nav-link" href="/">
                     <span class="nav-link-icon d-md-none d-lg-inline-block">
                        <i class="ti ti-home"></i>
                     </span>
                     <span class="nav-link-title">Home</span>
                  </a>
               </li>

               <li class="nav-item dropdown <%- url.search('/users/') === 0 ? 'active' : '' %>">
                  <a class="nav-link dropdown-toggle" href="#navbar-help" data-bs-toggle="dropdown"
                     data-bs-auto-close="outside" role="button" aria-expanded="false">
                     <span class="nav-link-icon d-md-none d-lg-inline-block">
                        <i class="ti ti-users"></i>
                     </span>
                     <span class="nav-link-title">Users</span>
                  </a>
                  <div class="dropdown-menu">
                     <a class="dropdown-item <%- url === '/users/index' ? 'active' : '' %>" href="/users/index">
                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                           <i class="ti ti-list-details"></i>
                        </span>
                        <span class="nav-link-title">List</span>
                     </a>
                     <a class="dropdown-item <%- url === '/users/create' ? 'active' : '' %>" href="/users/create">
                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                           <i class="ti ti-plus"></i>
                        </span>
                        <span class="nav-link-title">Add new</span>
                     </a>
                  </div>
               </li>

               <li class="nav-item dropdown <%- url.search('/products/') === 0 ? 'active' : '' %>">
                  <a class="nav-link dropdown-toggle" href="#navbar-help" data-bs-toggle="dropdown"
                     data-bs-auto-close="outside" role="button" aria-expanded="false">
                     <span class="nav-link-icon d-md-none d-lg-inline-block">
                        <i class="ti ti-package"></i>
                     </span>
                     <span class="nav-link-title">Products</span>
                  </a>
                  <div class="dropdown-menu">
                     <a class="dropdown-item <%- url === '/products/index' ? 'active' : '' %>"  href="/products/index">
                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                           <i class="ti ti-list-details" <% if(url === '/products/index') { style="color: #206bc4;" } %>></i>
                        </span>
                        <span class="nav-link-title">List</span>
                     </a>
                     <a class="dropdown-item <%- url === '/products/create' ? 'active' : '' %>" href="/products/create">
                        <span class="nav-link-icon d-md-none d-lg-inline-block">
                           <i class="ti ti-plus"></i>
                        </span>
                        <span class="nav-link-title">Add new</span>
                     </a>
                  </div>
               </li>
            </ul>
         </div>
      </div>
   </div>
</header>